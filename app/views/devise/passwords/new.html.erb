<h1>Forgot your password?</h1>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	<%= devise_error_messages! %>

	<%= f.label :email %>
	<%= f.email_field :email %>

	<div class="form-actions">
		<%= f.submit "Reset", :class=>'btn' %>
	</div>
<% end %>

<%= render "links" %>