- content_for :before_content do
  %h1 Sign up

.sign_in
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    #auth
      = link_to "Sign up via Twitter", "#", :class => 'auth_twitter' #user_omniauth_authorize_path(:twitter)
      = link_to "Sign up via Facebook", "#", :class => 'auth_facebook' #user_omniauth_authorize_path(:facebook)

    .login
      = f.label :email
      = f.email_field :email

      = f.label :password
      = f.password_field :password

      = f.label :password_confirmation
      = f.password_field :password_confirmation

      .button-area
        = f.submit "Sign up", :class => 'btn'

    %label.checkbox{ :for => 'user_opt_in' }
      = f.check_box :opt_in
      Receive Cool tech deals from SitePoint &amp; carefully selected 3rd-party partners.
      
  .links
    = render "links"