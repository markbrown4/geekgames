.page-header
  %h1 Play
  
%ol#games
  -@round.scores.each do |score|
    %li
      %h2= score.game.title
      %p= score.score
  
%h1= @game.title
%p.description= @game.description

.game{ :id=> "game-#{@game.id}" }
  %dl#scoreboard
    %dt Score:
    %dd#score= @score.score
    %dt Count down:
    %dd#countdown
      %span 20
      seconds
  #canvas

  %a#play.btn.btn-primary.btn-large{ :href => "#" } Play now