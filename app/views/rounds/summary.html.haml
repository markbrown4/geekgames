- content_for :before_content do
  %h1 Nice round!
  %p.description You can compete 3 times a day to be in the running.

%table
  - @round.scores.each do |score|
    %tr
      %th= score.game.title
      %td= score.score
  %tr
    %th Total
    %td= @round.total_score
  
- content_for :button_area do
  %a.btn.btn-green{ :href => "#", :id => 'play' } Next round

- content_for :sidebar do
  %ul
    %li.twitter= link_to "TWEET YOUR SCORE", "http://twitter.com/share?url=geekgames.sitepoint.com&text=I just scored #{@round.total_score} on Geek Games at Sitepoint: "
    %li.facebook= link_to "UPDATE YOUR STATUS", "#"
    %li.email= link_to "EMAIL A FRIEND", "mailto:friend@gmail.com&content=I just scored #{@round.total_score} on Geek Games at Sitepoint: "
    %li
      %a#demo.btn.btn-blue{ :href => leaderboard_path } Leaderboard