- content_for :before_content do
  %h1 The Leaderboard
  %p.description All time Olympic records

%ol#leaderboard
  - @leaders.each_with_index do |round, i|
    %li{:class => "pos-#{i+1}"}
      .place= (i+1).ordinalize
      =render(round.user)
      .score= sprintf("%.2f", round.total_score)

